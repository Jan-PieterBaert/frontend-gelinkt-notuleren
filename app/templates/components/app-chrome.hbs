<div class="grid u-spacer--tiny">
  <div class="col--6-12">
    <LinkTo @route="inbox.index" class="smaller link-dark">&leftarrow; Terug naar overzicht notulen</LinkTo>
    <label class="pill u-spacer--left--tiny">
      <span>{{get (await currentSession.group) 'classificatie.label'}} {{get (await currentSession.group) 'naam'}}</span>
    </label>
  </div>
  <div class="col--6-12 u-align-right">

    {{#if editorDocument.isNew}}
      <p class="smaller">
        <label class="pill pill--primary-yellow">
          <span class="badge badge--accent badge--xs badge--initials"><i class="vi vi-warning"></i></span>
          <span>Concept niet bewaard</span>
        </label>
      </p>
    {{else}}
      {{#if editorDocument.updatedOn}}
        <p class="smaller">
          Bewaard {{moment-calendar editorDocument.updatedOn}}
          <EditorStatusPill @status={{await documentContainer.status}} />
        </p>
      {{else}}
        <p class="smaller">
          <span class="smaller u-padding--right--tiny">
            <span class="badge badge--accent badge--xs badge--initials"><i class="vi vi-warning"></i></span>
            <span>Wijzigingen niet bewaard</span>
          </span>
          <EditorStatusPill @status={{await documentContainer.status}} />
        </p>
      {{/if}}
    {{/if}}
  </div>
</div>
<div class="grid">
  <div class="col--6-12">
    <EditorDocumentTitle @editorDocument={{editorDocument}} @readOnly={{readOnly}} />
  </div>
  <div class="col--6-12 u-align-right">
    {{#if features.languageSelect}}
      <LanguageSelect />
    {{/if}}
    <WuButtonGroup @class="u-align-right">
      {{#if editorDocument.isNew}}
        <LinkTo @route="inbox.index" class="button button--small button--narrow button--link button--link--dark">Verwijder concept</LinkTo>
      {{else}}
        <WuButton @label="Naar prullenmand" @isSmall={{true}} @isNarrow={{true}} @isLink={{true}} @isDarkLink={{true}} @onClick={{sendToTrash}} />
      {{/if}}
      <WuButton @label="Ondertekenen en publiceren" @isSmall={{true}} @isNarrow={{true}} @isAlt={{true}} @onClick={{publish}} />
      <WuButton @label="Bewaar concept" @isNarrow={{true}} @isSmall={{true}} @onClick={{save}} />
    </WuButtonGroup>

    {{#if startSyncModal}}
      <WuLinkButton @class="u-spacer--top--small" @isSmall={{true}} @isNarrow={{true}} @isLink={{true}} @onClick={{startSyncModal}}>
        <i class="fa fa-rotate-right"></i> Synchroniseer gegevens met OCMW
      </WuLinkButton>
    {{/if}}
  </div>
</div>

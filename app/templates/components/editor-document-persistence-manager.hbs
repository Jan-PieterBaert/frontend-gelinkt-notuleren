{{#wu-button-group class="u-align-right"}}
  {{#if isPublishAgendaAllowed}}
    {{#if isTrashingAllowed}}
      {{wu-button label="Verwijder concept" isNarrow=true isLink=true isDarkLink=true onClick=(action "sendToTrash")}}
    {{else}}
    	{{#link-to 'inbox.index' class="button button--narrow button--link button--link--dark"}}Verwijder document{{/link-to}}
    {{/if}}
    {{!-- {{wu-button label="Publiceer agendapunten" isNarrow=true isAlt=true onClick=(action "publish")}} --}}
    {{wu-button label='Publiceer agendapunten' command='Publicatie beschikbaar vanaf 20.12.2018' commandLocation='below' disabled=true onClick=null}}
    {{wu-button label="Bewaar concept" isNarrow=true onClick=(action "save")}}
  {{/if}}

  {{#if isPublishBesluitenlijstAllowed}}
    {{wu-button label='Publiceer besluitenlijst' command='Publicatie beschikbaar vanaf 02.01.2019' commandLocation='below' disabled=true onClick=null}}
    {{!-- {{wu-button label="Publiceer besluitenlijst" isNarrow=true isAlt=true onClick=(action "publish")}} --}}
    {{wu-button label="Bewaar aanpassingen" isNarrow=true onClick=(action "save")}}
  {{/if}}

  {{#if isPublishSignedNotulenAllowed}}
    {{wu-button label='Publiceer notulen' command='Publicatie beschikbaar vanaf 02.01.2019' commandLocation='below' disabled=true onClick=null}}
    {{!-- {{wu-button label="Publiceer notulen" isNarrow=true isAlt=true onClick=(action "publish")}} --}}
    {{wu-button label="Bewaar aanpassingen" isNarrow=true onClick=(action "save")}}
  {{/if}}
{{/wu-button-group}}

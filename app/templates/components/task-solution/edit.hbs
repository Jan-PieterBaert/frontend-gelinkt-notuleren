<h4 class="h6 u-spacer--tiny">{{taskSolution.task.title}}</h4>

<label class="checkbox checkbox--block">
  {{input class="checkbox__toggle" type="checkbox" checked=taskSolution.status click=(action "toggleStatus") }}
  <span></span>
  {{{taskSolution.task.description}}}
  {{#if taskSolution.task.clickTarget}}
    <a href="#" onClick={{action 'scrollTo' taskSolution.task.clickTarget}}>
      ga naar verwijzing in het document
    </a>
  {{/if}}
</label>

<div class="tasklist-navigation__group">
  {{#each sortedTaskSolutionChilds as |childSolution|}}
    {{task-solution/edit taskSolution=childSolution class="tasklist-navigation__item"}}
  {{/each}}

  {{yield}}
</div>

<EditorDocumentTasklist
  @editorDocument={{@editorDocument}}
  @onUpdateTasklists={{@onUpdateTasklists}} />

{{#if this.rdfaEditorContainerReady}}
  <Rdfa::RdfaEditor
      class="au-c-rdfa-editor"
      @profile={{@profile}}
      @value={{@editorDocument.content}}
      @rdfaEditorInit={{@rdfaEditorContainerInit}}
      @editorOptions={{hash showToggleRdfaAnnotations="true" showInsertButton="true" showRdfa="true" showRdfaHighlight="true" showRdfaHover="true"}}
      @toolbarOptions={{hash showTextStyleButtons="true" showListButtons="true" showIndentButtons="true"}} />
{{/if}}

{{yield}}

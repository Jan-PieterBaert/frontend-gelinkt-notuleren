{{page-title (t "inbox.irgArchive.pageTitle")}}
<AuDataTable @content={{this.model}} @isLoading={{this.isLoadingModel}} @noDataMessage='' @sort={{this.sort}} @page={{this.page}} @size={{this.size}} as |table|>
  <table.menu as |menu|>
    <menu.general>
      <AuToolbar class="au-o-box" @size="large" as |Group|>
        <Group>
          <AuHeading @skin="2">
            {{t 'inbox.irgArchive.pageTitle'}}
          </AuHeading>
        </Group>
        <Group class="au-c-toolbar__group--center">
          <AuDataTableTextSearch @wait={{2000}} @filter={{this.title}} @placeholder={{t 'inbox.irgArchive.searchPlaceholder'}} />
        </Group>
      </AuToolbar>
    </menu.general>
  </table.menu>
  <table.content as |c|>
    <c.header>
      <AuDataTableThSortable @field="currentVersion.title" @currentSorting={{this.sort}} @label={{t 'inbox.irgArchive.titleLabel'}} />
      <AuDataTableThSortable @field="type.label" @currentSorting={{this.sort}} @label={{t 'inbox.irgArchive.typeLabel'}} />
      <AuDataTableThSortable @field="identifier" @currentSorting={{this.sort}} @label={{t 'inbox.irgArchive.identifierLabel'}} />
    </c.header>
    <c.body as |container|>
      {{#let container.currentVersion as |row|}}
      <td>
        <LinkTo @route="irg-archive.show" @model={{container.id}} />
      </td>
      <td>
        {{container.type.label}}
      </td>
      <td>
        {{container.identifier}}
      </td>
      {{/let}}
    </c.body>
  </table.content>
</AuDataTable>

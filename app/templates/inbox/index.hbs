<AuDataTable @content={{model}} @isLoading={{isLoadingModel}} @noDataMessage="Geen documenten" @sort={{sort}} @page={{page}} @size={{size}} @class="container-flex--contain" as |t|>
  <t.menu as |menu|>
    <menu.general>
      <AuToolbar @size="large">
        <AuToolbarGroup>
          <AuHeading @skin="2">
            Notulen zitting
          </AuHeading>
        </AuToolbarGroup>
        <AuToolbarGroup class="au-c-toolbar__group--search">
          <TextSearch @filter={{title}} @placeholder="Zoek titel notulen" class="au-u-1-2@small" />
          <AuButton {{action 'openNewDocument'}}>
            Nieuwe zitting
          </AuButton>
        </AuToolbarGroup>
      </AuToolbar>
      {{!-- <ul class="bullet-list">
        {{#each (await currentSession.roles) as |role|}}<li>{{role}}, </li>{{/each}}
      </ul> --}}
      {{!-- <WuButtonGroup> --}}
        {{!-- <LinkTo @route="inbox.archive" class="button button--alt">Bekijk archief notulen</LinkTo> --}}
        {{!-- <LinkTo @route="imported-documents.new" class="button button--alt">Importeer html bestand</LinkTo> --}}
        {{!-- <WuButton @isNarrow={{true}} @onClick={{action "openNewDocument"}}>Nieuwe zitting</WuButton> --}}
      {{!-- </WuButtonGroup> --}}
    </menu.general>
  </t.menu>
  <t.content as |c|>
    <c.header>
      <!-- <th class="data-table__header-title"><!-- Starred </th> -->
      <AuDataTableThSortable @field="currentVersion.title" @currentSorting={{sort}} @label="Titel notulen" />
      <AuDataTableThSortable @field="currentVersion.createdOn" @currentSorting={{sort}} @label="Aangemaakt" />
      <AuDataTableThSortable @field="currentVersion.updatedOn" @currentSorting={{sort}} @label="Aangepast" />
      <AuDataTableThSortable @field="status" @currentSorting={{sort}} @label="Status" />
    </c.header>
    <c.body as |container|>
      {{#with container.currentVersion as |row|}}
      <td><LinkTo @route="meetings.edit" @model={{container.id}} class="au-c-link">{{row.title}}</LinkTo></td>
      <td>
        {{moment-calendar row.createdOn}}
        <br>
        <p class="smaller text-fade">{{moment-from-now document.currentVersion.updatedOn}}</p>
      </td>
      <td>
        {{moment-calendar row.updatedOn}}
        <br>
        <p class="smaller text-fade">{{moment-from-now document.currentVersion.updatedOn}}</p>
      </td>
      <td><EditorStatusPill @status={{await container.status}} /> <br> <DocumentLinkToPublished @document={{row}} />
      </td>
      {{/with}}
    </c.body>
  </t.content>
</AuDataTable>

{{outlet}}

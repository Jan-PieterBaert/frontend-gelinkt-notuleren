{{page-title (t "inbox.regulatoryStatements.pageTitle")}}
<SnippetsNotifier />

<AuDataTable @content={{this.model}} @isLoading={{this.isLoadingModel}} @noDataMessage={{t 'inbox.regulatoryStatements.noDataMessage'}} @sort={{this.sort}} as |table|>
  <table.menu as |menu|>
    <menu.general>
      <AuToolbar class="au-o-box" @size="large">
        <AuToolbarGroup>
          <AuHeading @skin="2">
            {{t 'inbox.regulatoryStatements.pageTitle'}}
          </AuHeading>
        </AuToolbarGroup>
        <AuToolbarGroup class="au-c-toolbar__group--center">
          <AuInput @icon="search" @iconAlignment="right" @value={{this.searchValue}} placeholder={{t 'inbox.regulatoryStatements.searchPlaceholder'}} />
          {{#unless this.readOnly}}
            <AuButton {{on "click" (fn (mut this.displayCreateModal) true)}} @skin="primary" @icon="add" @iconAlignment="left">{{t "inbox.regulatoryStatements.new.title"}}</AuButton>
          {{/unless}}
        </AuToolbarGroup>
      </AuToolbar>
    </menu.general>
  </table.menu>
  <table.content as |c|>
    <c.header>
      <AuDataTableThSortable @field="currentVersion.title" @currentSorting={{this.sort}} @label={{t 'inbox.regulatoryStatements.titleLabel'}} />
      <AuDataTableThSortable @field="currentVersion.updatedOn" @currentSorting={{this.sort}} @label={{t 'inbox.regulatoryStatements.updatedOnLabel'}} />
    </c.header>
    <c.body as |container|>
      {{#let container.currentVersion as |row|}}
        <td>
          <AuLink @route="regulatory-statements.edit" @model={{row.id}}>{{row.currentVersion.title}}</AuLink>
        </td>
        <td>
          {{human-friendly-date row.updatedOn}}
          <br>
        </td>
      {{/let}}
    </c.body>
  </table.content>
</AuDataTable>
{{outlet}}

<AuModal
  @title="Nieuwe reglementaire bijlage"
  @modalOpen={{this.displayCreateModal}}
  @closeModal={{fn (mut this.displayCreateModal) false}}
  as |Modal|
>
  <Modal.Body>
    <form class="au-c-form">
      <AuFormRow @alignment="default">
        <AuLabel for="title" @required={{true}}>
          Titel
        </AuLabel>
        <AuTextarea id="title" @width="block" />
      </AuFormRow>
      <AuFormRow @alignment="default">
        <AuLabel for="template" @required={{true}}>
          Sjabloon
        </AuLabel>
        <select id="template" class="au-c-select">
          <option value=""></option>
          <option value="0">Vrije tekst</option>
          <option value="1">Template 1</option>
          <option value="2">Template 2</option>
        </select>
      </AuFormRow>
      {{!-- <AuFormRow @alignment="default">
        <AuLabel for="type" @required={{true}}>
          Type
        </AuLabel>
        <select id="type" class="au-c-select">
          <option value="0"></option>
          <option value="1">Type 1</option>
          <option value="2">Type 2</option>
        </select>
      </AuFormRow> --}}
    </form>
  </Modal.Body>
  <Modal.Footer>
    <AuButtonGroup>
      <AuLink  @route="regulatory-statements.edit" @skin="button" {{on "click" (fn (mut this.displayCreateModal) false)}}>
        {{t "inbox.agendapoints.new.create"}}
      </AuLink>
      <AuButton @skin="secondary" {{on "click" (fn (mut this.displayCreateModal) false)}}>
        {{t "inbox.agendapoints.new.cancel"}}
      </AuButton>
    </AuButtonGroup>
  </Modal.Footer>
</AuModal>
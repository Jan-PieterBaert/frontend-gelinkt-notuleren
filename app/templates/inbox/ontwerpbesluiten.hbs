<DataTable @content={{model}} @isLoading={{isLoadingModel}} @noDataMessage="Geen documenten" @sort={{sort}} @page={{page}} @size={{size}} @class="container-flex--contain" as |t|>
  <t.menu as |menu|>
    <menu.general>
      <div class="u-padding--round--tiny">
        <div class="grid">
          <div class="col--5-12 u-wide-on-print">
            <h1 class="h4 u-spacer--tiny">Ontwerpbesluiten</h1>
            <TextSearch @filter={{title}} @placeholder="Zoek titel ontwerpbesluit" />
          </div>
          <div class="col--7-12">
            <div class="u-align-right">
              <LinkTo @route="ontwerpbesluiten-documents.demo-1-b" class="button button--link button--link--dark">Ontwerp invoegen kort</LinkTo>

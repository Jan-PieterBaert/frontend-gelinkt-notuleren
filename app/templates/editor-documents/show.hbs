
<div class="au-c-app-chrome">
  <AuToolbar @size="small" class="au-u-padding-bottom-none">
    <AuToolbarGroup>
      {{#if (eq documentContainer.status.name "gearchiveerd")}}
        <AuLink @linkRoute="inbox.archive" @skin="secondary" @icon="arrow-left" @iconAlignment="left">
          Terug naar archiev [@TN]
        </AuLink>
      {{/if}}
      <span class="au-c-app-chrome__entity">{{get (await currentSession.group) 'classificatie.label'}} {{get (await currentSession.group) 'naam'}}</span>
    </AuToolbarGroup>
    <AuToolbarGroup>
      <ul class="au-c-list-horizontal au-u-padding-right-tiny">
        <li class="au-c-list-horizontal__item">
          {{!--
          <span class="au-c-app-chrome__status">
            <AuIcon @icon="alert-triangle" @alignment="left" />
            Wijzigingen niet bewaard
          </span>
          --}}
        </li>
      </ul>
    </AuToolbarGroup>
  </AuToolbar>
  <AuToolbar @size="small" class="au-u-padding-top-none">
    <AuToolbarGroup>
      {{!-- <div>
        <AuPill @skin="action">
          Concept
        </AuPill>
      </div> --}}
      <h1 class="au-c-app-chrome__title">{{editorDocument.title}}</h1>
    </AuToolbarGroup>
  </AuToolbar>
</div>

<div class="editor-container container-flex--scroll">
  <div class="editor">
    <div class="au-o-grid au-o-grid--flush au-o-grid--reverse">
      <div class="au-o-grid__item au-u-1-3@medium">
        <div class="au-o-box">
          {{#if (eq documentContainer.status.name "gearchiveerd")}}
            <i class="vi vi-check vi-u-badge vi-u-badge vi-u-badge--large vi-u-badge--action u-spacer--small"></i>
            <h4 class="h4 u-spacer--small">Gearchiveerd[@TN]</h4>
            <p class="text-fade smaller">U kan de gearchiveerd document niet meer bewerken.[@TN]</p>
          {{else}}
            <i class="vi vi-check vi-u-badge vi-u-badge vi-u-badge--large vi-u-badge--action u-spacer--small"></i>
            <h4 class="h4 u-spacer--small">Notulen publiek</h4>
            <p class="text-fade smaller">U kan de publieke notulen niet meer bewerken.</p>
          {{/if}}
        </div>
      </div>
      <div class="au-o-grid__item au-u-2-3@medium">
        <div class="editor__paper editor__paper--disabled editor__paper--full">
          <div vocab={{editorDocumentVocab}}
            prefix="eli: http://data.europa.eu/eli/ontology# prov: http://www.w3.org/ns/prov# mandaat: http://data.vlaanderen.be/ns/mandaat# besluit: http://data.vlaanderen.be/ns/besluit#"
            resource="#"
            typeof="foaf:Document"
            class="container-flex--contain">
            {{{ editorDocument.content }}}
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

{{outlet}}

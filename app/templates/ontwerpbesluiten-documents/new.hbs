          <button class="button button--narrow button--link button--dark button--link--dark">
            <i class="fa fa-bold"></i>
          </button>
                  <button class="button button--narrow button--link button--dark button--link--dark">
            <i class="fa fa-italic"></i>
          </button>
                  <button class="button button--narrow button--link button--dark button--link--dark">
            <i class="fa fa-underline"></i>
          </button>

<AuModal @modalOpen={{true}}
         @size="fullscreen"
         @modalTitle={{t "meetingForm.fourthSectionTitle"}}
         @closeModal={{this.closeModal}}
         as |Modal|>
  <Modal.Body>
    <ZittingTextDocumentContainer
            @onEditorInit={{this.initEditor}}
            @saving={{this.saveTextTask.isRunning}}
            @type="ext:intro"
            @zitting={{@model}}/>
  </Modal.Body>
  <Modal.Footer>
    <AuButton @skin="secondary"
              @loading={{this.saveTextTask.isRunning}}
      {{on "click" this.cancel}}>
      {{t "meetings.edit.intro.cancel"}}
    </AuButton>
    <AuButton {{on "click" (perform this.saveTextTask)}}
            @loading={{this.saveTextTask.isRunning}}>
      {{t "meetings.edit.intro.save"}}
    </AuButton>
    <AuButton @loading={{this.saveTextTask.isRunning}} {{on "click" this.saveAndQuit}}>
      {{t "meetings.edit.intro.saveAndQuit"}}
    </AuButton>
  </Modal.Footer>
</AuModal>
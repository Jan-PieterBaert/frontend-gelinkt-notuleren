{{#wu-modal
    title=(t "manageAgendaZittingModal.modalTitle")
    dialog-class="modal-dialog--wide modal-dialog--sectioned"
    onClose=@cancel
    as |m|
}}
  {{#m.content isSectioned=true}}
    {{#if this.isEditing}}
      <Agenda::Edit @afterSave={{@afterSave}} @agendapunt={{this.currentlyEditing}} @toggleEditing={{this.toggleEditing}}/>
    {{else}}
      <Agenda::List @agendapunten={{@agendapunten}} @createAgendapunt={{this.createAgendapunt}} @edit={{this.edit}}/>
    {{/if}}
  {{/m.content}}

  <AuToolbar @border="top" @size="large">
    {{#if this.isEditing}}
      <AuToolbarGroup>
        <AuButtonGroup>
          <AuButton {{on "click" this.save}}>{{t "manageAgendaZittingModal.saveButton"}}</AuButton>
          <AuButton @skin="secondary" {{on "click" this.toggleEditing}}>{{t "manageAgendaZittingModal.cancelButton"}}</AuButton>
        </AuButtonGroup>
      </AuToolbarGroup>
    {{else}}
      <AuToolbarGroup>
        <AuButtonGroup>
          <AuButton @skin="secondary" {{on "click" @cancel}}>{{t "manageAgendaZittingModal.cancelButton"}}</AuButton>
        </AuButtonGroup>
      </AuToolbarGroup>
    {{/if}}
  </AuToolbar>
{{/wu-modal}}

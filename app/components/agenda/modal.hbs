{{#wu-modal
    title="Beheer Agenda"
    dialog-class="modal-dialog--wide modal-dialog--sectioned"
    onClose=@cancel
    as |m|
}}
  {{#m.content isSectioned=true}}
    {{#if this.isEditing}}
      <Agenda::Edit @agendapunt={{this.currentlyEditing}} @toggleEditing={{this.toggleEditing}}/>
    {{else}}
      <Agenda::List @agendapunten={{@agendapunten}} @createAgendapunt={{this.createAgendapunt}} @edit={{this.edit}}/>
    {{/if}}
  {{/m.content}}

  <AuToolbar @border="top" @size="large">
    {{#if this.isEditing}}
      <AuToolbarGroup>
        <AuButtonGroup>
          <AuButton {{on "click" this.save}}>Bewaar agendapunt</AuButton>
          <AuButton @skin="secondary" {{on "click" this.toggleEditing}}>Annuleer</AuButton>
        </AuButtonGroup>
      </AuToolbarGroup>
    {{else}}
      <AuToolbarGroup>
        <AuButtonGroup>
          <AuButton @skin="secondary" {{on "click" @cancel}}>Sluit venster</AuButton>
        </AuButtonGroup>
      </AuToolbarGroup>
    {{/if}}
  </AuToolbar>
{{/wu-modal}}
{{#if @readOnly}}
  <h1 class="au-c-app-chrome__title">
    {{limit-content this.title 70}} 
  </h1>
{{else}}
  {{#if this.active}}
    <form {{on 'submit' this.submit}} {{on "focusout" this.cancel}}>
      <div class="au-c-app-chrome__title-group {{if this.error "au-c-input--error"}}">
        {{#let (unique-id) as |id|}}
          <AuLabel for={{id}} class="au-u-hidden-visually">
            agendapunt titel
          </AuLabel>
          {{#if this.error}}
            <input
              class="au-c-app-chrome__title-input au-c-input--error "
              placeholder="Naamloos document"
              id={{id}}
              type="text"
              value={{this.title}}
              {{on "input" this.setTitle}}
              {{did-insert this.focus}}
            />
          {{else}}
            <input
              class="au-c-app-chrome__title-input"
              placeholder="Naamloos document"
              id={{id}}
              type="text"
              value={{this.title}}
              {{on "input" this.setTitle}}
              {{did-insert this.focus}}
            />
          {{/if}}
        {{/let}}
        <AuButton
          type="submit"
          class="au-c-app-chrome__title-button"
          @skin="secondary"
          @icon="check"
          @hideText={{true}}
        >Titel aanpassen</AuButton>
      </div>
    </form>
  {{else}}
    <h1 class="au-c-app-chrome__title au-c-app-chrome__title--edit">
      {{limit-content this.title 70}} 
      <AuButton {{on "click" this.toggleActive}} @icon="pencil" @skin="tertiary" @hideText={{true}} >titel wijzigen</AuButton>
    </h1>
  {{/if}}

{{/if}}

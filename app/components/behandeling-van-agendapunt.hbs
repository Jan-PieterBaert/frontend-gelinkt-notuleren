<div>
  <AuHeading>{{@behandeling.onderwerp.titel}}</AuHeading>
  <div>
    Openbaar: <Input @type='checkbox' @checked={{this.openbaar}} {{on "input" this.toggleOpenbaar}} />
  </div>
  <AuButtonGroup>
    <AuButton {{on "click" this.save}}>
      Save
    </AuButton>
  </AuButtonGroup>
</div>
<Behandeling::Participation
  @behandeling={{@behandeling}}
  @bestuursorgaan={{@bestuursorgaan}}
/>
<div>
  {{#if this.tryToFetchDocument.lastSuccessful}}
    <BesluitDocumentContainer @document={{this.document}} @handleRdfaEditorInit={{this.handleRdfaEditorInit}}/>
  {{/if}}
</div>
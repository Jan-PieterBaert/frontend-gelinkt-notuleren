<div class="au-c-alert au-c-alert--info au-u-margin-top">
  <div class="au-c-alert__content">
    <AuHeading @level="4" @skin="5">{{t "manageIntermissions.deleteCardTitle"}}</AuHeading>
    <AuHr />
    <AuHelpText @size="large" class="au-u-margin-bottom">
      {{t "manageIntermissions.warning"}}
    </AuHelpText>

    {{#if this.isShowingWarning}}
      <div>
        <div class="au-u-margin-bottom">
          <AuLabel>
            {{t "manageIntermissions.agreeQuestion"}}
          </AuLabel>
          <label class="au-c-control au-c-control--checkbox">
            <Input class="au-c-control__input" @type="checkbox" @checked={{this.hasAgreed}} />
            <span class="au-c-control__indicator"></span>
            {{t "manageIntermissions.checkboxLabel"}}
          </label>
        </div>

        <AuButtonGroup>

          <AuButton
              @disabled={{not this.hasAgreed}}
              @alert={{true}}
              @skin="primary"
              @loading={{@loading}}
              {{on "click" @onDelete}} >
            {{t "manageIntermissions.deleteButton"}}
          </AuButton>
          <AuButton @skin="secondary" {{on "click" this.reset}} >
            {{t "manageIntermissions.retainButton"}}
          </AuButton>
        </AuButtonGroup>
      </div>
    {{else}}
      <AuButtonGroup>
        <AuButton @alert={{true}} @skin="secondary" {{on "click" this.toggleWarning}} >
          {{t "manageIntermissions.toggleWarningButton"}}
        </AuButton>
      </AuButtonGroup>
    {{/if}}
  </div>
</div>
<WuModal @title={{concat (t "publicationConfirmation.modalTitle") @name}} @dialog-class="modal-dialog--wide modal-dialog--full modal-dialog--sectioned" @onClose={{@cancel}} as |m|>
  <m.content @isSectioned={{true}}>
  <div class="grid u-padding--top--small">
    <div class="col--12-12">
    	<div class="u-padding--rl--small">
			</div>
		</div>
    <div class="col--7-12">
      <div class="say-editor">
        <div class="au-c-rdfa-publication say-content rdfa-annotations behandeling-preview">
          <div class="grid grid--collapse">
            <div class="col--11-12">
              {{{@mockDocument.body}}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col--5-12">
    	<div class="u-padding--rl--small">
				<div class="alert alert--tiny">
					<div class="alert__icon" aria-hidden="true"></div>
					<div class="alert__content">
						<div class="alert__message">
							<p><strong>{{t "publicationConfirmation.alertFirstPart"}}</strong> {{t "publicationConfirmation.alertSecondPart"}}<strong> {{t "publicationConfirmation.alertThirdPart"}}</strong> {{t "publicationConfirmation.alertFourthPart"}}</p>
						</div>
					</div>
				</div>

				<h2 class="h6 u-spacer--tb--small">{{t "publicationConfirmation.publicationTitle"}}</h2>
        <p class="small u-spacer">{{t "publicationConfirmation.publicationSubtitle"}} <a href="{{this.publicationBaseUrl}}">{{this.publicationBaseUrl}}</a>.</p>

{{#if @bestuursorgaan}}
  <div {{did-update (perform this.fetchMandatees)}}>
    {{#if this.hasParticipationInfo}}
      Voorzitter: <br>
      {{@voorzitter.isBestuurlijkeAliasVan.fullName}} <br>
      Secretaris: <br>
      {{@secretaris.isBestuurlijkeAliasVan.fullName}} <br>
      Aanwezige mandatarissen: <br>
      {{#each @aanwezigenBijStart as |mandataris|}}
        {{mandataris.isBestuurlijkeAliasVan.fullName}},
      {{/each}} <br>
      Afwezige mandatarissen: <br>
      {{#each this.mandateesNotPresent as |mandataris|}}
        {{mandataris.isBestuurlijkeAliasVan.fullName}},
      {{/each}}
    {{/if}}
    <div class="modal-dialog__footer">
      <WuButtonGroup>
        <WuButton
          @label="Beheer aanwezigen bij start van de zitting"
          @isNarrow={{"true"}}
          @onClick={{this.togglePopup}}
          @disabled={{this.fetchMandatees.isRunning}}
        />
      </WuButtonGroup>
    </div>
    <ParticipationList::Modal
      @bestuursorgaan={{@bestuursorgaan}}
      @show={{this.popup}}
      @togglePopup={{this.togglePopup}}
      @onSave={{this.onSave}}
      @aanwezigenBijStart={{@aanwezigenBijStart}}
    />
  </div>
{{/if}}

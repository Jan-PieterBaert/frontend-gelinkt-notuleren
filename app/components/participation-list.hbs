{{#if @bestuursorgaan}}
  <div {{did-insert (perform this.fetchMandatees)}}>
    {{#if this.hasParticipationInfo}}
      Voorzitter[@TN]: <br>
      <ParticipationList::Person @person={{@voorzitter}} /> <br>
      Secretaris[@TN]: <br>
      <ParticipationList::Person @person={{@secretaris}} /> <br>
      Aanwezigen Mandatees[@TN]: <br>
      {{#each @aanwezigenBijStart as |mandataris|}}
        <ParticipationList::Person @person={{mandataris}} />,
      {{/each}} <br>
      Not Aanwezigen Mandatees[@TN]: <br>
      {{#each this.mandateesNotPresent as |mandataris|}}
        <ParticipationList::Person @person={{mandataris}} />,
      {{/each}}
    {{/if}}
    <div class="modal-dialog__footer">
      <WuButtonGroup>
        <WuButton
          @label="Beheer aanwezigen"
          @isNarrow={{"true"}}
          @onClick={{this.togglePopup}}
          @disabled={{this.fetchMandatees.isRunning}}
        />
      </WuButtonGroup>
    </div>
    <ParticipationList::Modal
      @bestuursorgaan={{@bestuursorgaan}}
      @show={{this.popup}}
      @togglePopup={{this.togglePopup}}
      @onSave={{this.onSave}}
      @aanwezigenBijStart={{@aanwezigenBijStart}}
    />
  </div>
{{/if}}

{{yield}}

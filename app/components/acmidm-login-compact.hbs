<Acmidm::Login as |acmidm|>
  <button {{on "click" acmidm.login}} disabled={{acmidm.isAuthenticating}} type="submit" class="{{@styles}}">
    {{yield}}
  </button>
    {{#if acmidm.isAuthenticating}}
      <AuLoader />
    {{/if}}
    {{#if acmidm.errorMessage}}
      <AuAlert @size="small" @icon="cross" @title={{this.errorMessage}} @skin="error" />
    {{/if}}
</Acmidm::Login>
